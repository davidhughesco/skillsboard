<%= link_to 'New Course', new_course_path, class: "btn btn-primary" %>

<% @courses.each do |course| %>

  <div class="course-listing">
    <h1><%= course.title %></h1>
    <p><%= truncate (sanitize course.content, tags: %w(p)), length: 200 %></p>
    <%= link_to "View", course, class: "btn btn-sm btn-primary" %>
    <%= link_to "Edit", edit_course_path(course), class: "btn btn-sm btn-default" %>
    <%= link_to "Delete", course, method: :delete, data: { confirm: 'Are you sure you want to delete this course? This action cannot be undone.' }, class: "btn btn-sm btn-default" %>
  </div>
  <hr>

<% end %>
